#!/bin/sh

if ! test -d ~git/.ssh; then
    mkdir -p ~git/.ssh
    chmod 700 ~git/.ssh
fi

if ! test -f ~git/.ssh/environment; then
    echo "GOGS_CUSTOM=${GOGS_CUSTOM}" > ~git/.ssh/environment
    chmod 600 ~git/.ssh/environment
fi

cd /app/gogs || exit 1

# Link volumed data with app data
ln -sfn /data/gogs/log  ./log
ln -sfn /data/gogs/data ./data

# Backward Compatibility with Gogs Container v0.6.15
ln -sfn /data/git /home/git

if ! chmod 0755 /data /data/gogs ~git/ 2>/dev/null; then
    echo "Warning: Could not set permissions on data directories - ensure volume has correct permissions" 1>&2
fi
